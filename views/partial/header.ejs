<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>
      <%- typeof title === 'string'? title : '아즈인포' %>
    </title>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="/!/public/css/main.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,300,700" />
    <script>
window.BaseURI = '<%- baseuri %>'
<% if(locals.session) { %>
window.session = '<%- session %>'
<% } %>
    </script>

    <script src="/!/public/js/lib.js"> </script>
    <% if(locals.css) { %>
      <% for(var i in css) { %>
        <link rel="stylesheet" href="<%- css[i] %>" />
      <% } %>
    <% } %>
    <% if(locals.script) { %>
      <% for(var i in script) { %>
        <script src="<%- script[i] %>"> </script>
      <% } %>
    <% } %>
  </head>
  <body>
    <% if(locals.left && left) { %>
      <input type="radio" name="aside" id="menu-toggle" class="hidden" />
    <% } %>
    <% if(locals.right && right) { %>
      <input type="radio" name="aside" id="sort-toggle" class="hidden" />
    <% } %>
    <% if(locals.left && left || locals.right && right) { %>
      <input type="radio" name="aside" id="reset" class="hidden" />
    <% } %>
    <div class="toolbar-decorator"> </div>
